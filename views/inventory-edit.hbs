    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active p-5" id="update" role="tabpanel" aria-labelledby="update-tab">
            <label><strong>item Id: </strong>{{selectedproduct._id}}</label>
            <hr />
            <div class="form-group">
                <img class="img-fluid img-thumbnail zoom" style="max-width: 20%; min-width: 200px; height: auto;" src='{{selectedproduct.itemImgPath}}'
                />
            </div>
            <form class="form-group" method="post" enctype="multipart/form-data" action="/inventories/upload/{{selectedproduct._id}}">
                <input class=" input-lg input-search" type="file" name="myImage" style="background-color: white; max-width: 220px">
                <input class="mt-2" type="submit" value="Submit">
