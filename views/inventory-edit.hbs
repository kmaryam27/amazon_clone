            {{!-- --}}
            <form class="form-group" action="/inventories/update/product/{{selectedproduct._id}}?_method=PUT" method="post">
                <input type="hidden" value="{{selectedproduct.itemImgPath}}" name="itemImgPath" />
                <fieldset>
                    <div class="form-group">
                        <label><strong>Seller: </strong></label><input type="text" name="itemSeller" class="form-control"
                            placeholder="{{selectedproduct.itemSeller}}" />
                    </div>
                    <div class="form-group">
                        <label><strong>name: </strong></label><input type="text" name="itemName" class="form-control" placeholder="{{selectedproduct.itemName}}"
                        />
                    </div>
                    <div class="form-group">
                        <label><strong>department: </strong></label><input type="text" name="itemDepartment" class="form-control"
                            placeholder="{{selectedproduct.itemDepartment}}" />
                    </div>
                    <div class="form-group">
                        <label><strong>About the product: </strong></label><input type="text" name="itemDescription" class="form-control"
                            placeholder="{{selectedproduct.itemDescription}}">
                    </div>
                    <div class="form-group">
                        <label><strong>Price: </strong></label><input type="text" name="itemPrice" class="form-control" placeholder="${{selectedproduct.itemPrice}}">
                    </div>
                    <div class="form-group">
                        <label><strong>count: </strong></label><input type="text" name="itemCount" class="form-control" placeholder="{{selectedproduct.itemCount}}">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </fieldset>
            </form>
            {{#if msgeupdate}}
            <div class=" container-fluid alert alert-danger col-lg-4  ml-50">
                <p><strong>Erorr: </strong>{{msgeupdate}}</p>
            </div>
            {{/if}} {{#if msgeupdateok}}
            <div class=" container-fluid alert alert-success col-lg-4  ml-50">
                <p><strong>congratulation: </strong>{{msgeupdateok}}</p>
            </div>
            {{/if}} {{#if msgaddok}}
            <div class=" container-fluid alert alert-success col-lg-4  ml-50">
                <p><strong>congratulation: </strong>{{msgaddok}}</p>
            </div>
            {{/if}}
        </div>
        <div class="tab-pane fade" id="add" role="tabpanel" aria-labelledby="add-tab">
            <div class="tab-pane fade show active p-5" id="update" role="tabpanel" aria-labelledby="update-tab">
                <form class="form-group" action="/inventories/add/product" method="post">
                    <div class="form-group">
                        <img class="img-fluid img-thumbnail zoom" style="max-width: 20%; min-width: 200px; height: auto;" src='/images/default.png'
                        />
                    </div>
                    <fieldset>
                        <div class="form-group">
                            <label><strong>Seller: </strong></label><input type="text" name="newitemSeller" class="form-control"
                                placeholder="seller's username" />
                        </div>
                        <div class="form-group">
                            <label><strong>name: </strong></label><input type="text" name="newitemName" class="form-control"
                                placeholder="item's Name" />
                        </div>
                        <div class="form-group">
                            <label><strong>department: </strong></label><input type="text" name="newitemDepartment" class="form-control"
                                placeholder="item's Department" />
                        </div>
                        <div class="form-group">
                            <label><strong>About the product: </strong></label><input type="text" name="newitemDescription"
                                class="form-control" placeholder="item's Description">
                        </div>
                        <div class="form-group">
                            <label><strong>Price: </strong></label><input type="text" name="newitemPrice" class="form-control"
                                placeholder="Price">
                        </div>
                        <div class="form-group">
                            <label><strong>count: </strong></label><input type="text" name="newitemCount" class="form-control"
                                placeholder="Count">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </fieldset>
                </form>
                {{#if msgadd}}
                <div class=" container-fluid alert alert-danger col-lg-4  ml-50">
                    <p><strong>Erorr: </strong>{{msgadd}}</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>