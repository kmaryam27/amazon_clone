{{#each inventory}}
<div class="row mt-5 mobileIndexMR">
  <div class="col-sm-4 col-md-6 col-lg-5 col-xl-5 align-items-center" style="border:1px solid white">
    <img class="align-self-center item-image" src={{this.itemImgPath}}>
  </div>
  <div class="col-sm-4 col-md-3 col-lg-5 col-xl-5" style="border:1px solid white">
    <ul class="list-group">
      <a href='/purchase/{{this._id}}'>
      <li class="list-unstyled" style="font-size: 24px;">{{this.itemName}}</li>
      </a>
      <li class="list-unstyled" style="font-size:14px; color:#666666">by {{this.itemSeller}}</li>
      <li class="list-unstyled" style="color:black">$ <span style="font-size:26px; font-weight:400;">{{this.itemPrice}} </span></li>
      {{#if this.itemCount}}
      <li class="list-unstyled" style='color:green'>In stock</li>
      <li class="list-unstyled"  style="font-size:14px; color:#666666">Get it by <span style="color:black; font-weight:bold;">Tomorrow!</span></li>
      <li class="list-unstyled"  style="font-size:14px; color:#666666">FREE Shipning on eligible orders </li>
      {{/if}}
      {{#unless this.itemCount}}
      <li class="list-unstyled" style='color:red'>Not in Stock</li>
      {{/unless}}
    </ul>
  </div>
  <div class="col-sm-4 col-md-3 col-lg-2 col-xl-2" style="border:1px solid white">
    <a href="/review/{{this.id}}" id="reviewBtn" class="btn btn-outline-primary ">Review</a>
  </div>
  <hr class='HRindex'/>
</div>
{{/each}}

<div class='pagination-tri'>
  {{#if pages}}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item"><a class="page-link" href="/inventory/prev">Previous</a></li>
      <li class="page-item"><a class="page-link" href="/inventory/1">1</a></li>
      <li class="page-item"><a class="page-link" href="/inventory/2">2</a></li>
      <li class="page-item"><a class="page-link" href="/inventory/3">3</a></li>
      <li class="page-item"><a class="page-link" href="/inventory/next">Next</a></li>
    </ul>
  </nav>
  {{/if}}
</div>